# EditorConfig is awesome: https://EditorConfig.org

root = true

[*]
charset = utf-8
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
indent_style = space
indent_size = 4

[*.{py,pyi}]
max_line_length = 100
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{json,jsonc}]
indent_size = 2

[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

[Makefile]
indent_style = tab

[*.{sh,bash}]
indent_size = 2

[*.{cmake,CMakeLists.txt}]
indent_size = 2

[*.{cpp,hpp,h,cc,cxx}]
indent_size = 2
max_line_length = 100

[*.{js,jsx,ts,tsx}]
indent_size = 2
max_line_length = 100
